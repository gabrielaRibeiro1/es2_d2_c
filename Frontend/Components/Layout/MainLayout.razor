@inherits LayoutComponentBase
@inject NavigationManager Nav

@code {
// Pega o path relativo sem barras e em minúsculas (ex: "login", "ingredients")
private string RelativePath =>
Nav.ToBaseRelativePath(Nav.Uri)
.Trim('/')
.ToLowerInvariant();

// Mostra o sidebar em tudo que não for a página de login
private bool ShowSidebar => RelativePath != "" && RelativePath != "create-account";
}

<div class="page">
    @if (ShowSidebar)
    {
    <div class="sidebar">
        <NavMenu />
    </div>
    }

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
